<%- include('./partials/head.ejs') %>
<body>
 <%- include('./partials/header.ejs') %>
   
  <h1><%= title %></h1>
  <main class="d-flex justify-content-around flex-column-mobile align-items-center">
    <% for(let product of products) { %>
      <div class="card m-3" style="width: 25rem;">
        <h5 class="card-title h4 m-3"><%= product.name %></h5>
      <img class="card-img-top" src="/images/<%= product.image %>" alt="<% product.name %>">
     
      <div class="card-body">
        <p class="card-text"><%= product.description %>.</p>
        <% if(product.color) { %>
          <class="title-products"> <%= product.color.name %></p>
        <% } %>
        <% if(product.brand) { %>
          <class="title-products"> <%= product.brand.name %></p>
        <% } %>
        <p class="card-text"><%= product.size %> cm</p>
        <p class="card-text">$<%= product.price %>.-</p>
        
        <div class="d-flex justify-content-between">
          <a href="/products/detail/<%= product.id %>"class="text-decoration-none text-dark bold">Add to Cart</a>
          <a href="/products/detail/<%= product.id %>"class="text-decoration-none text-dark bold">View</a>
        </div>
      </div>
    </div>
    <% } %>
</main>
<script src="/javascripts/script.js"></script>
  <script src="/javascripts/cart.js"></script>

</body>

  <%- include('./partials/footer.ejs') %>

</html>
