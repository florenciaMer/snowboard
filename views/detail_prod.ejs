<%- include('./partials/head.ejs') %>
<body>
 <%- include('./partials/header.ejs') %>

   
  <!-- <h1><%= title %></h1> -->

  <div class="main">
      <div class="shop_top">
		<div class="container">
			<div class="row m-4">
				<div class="col-md-9 single_left d-flex flex-row">
				   <div class="single_image">
					     <ul id="etalage">
							<li>
								<a href="optionallink.html">
									<img class="etalage_thumb_image" src="/images/<%= product.image %>" alt="<% product.name %>">
								</a>
							</li>

						</ul>
					    </div>
				        <!-- end product_slider -->
				        <div class="single_right">
							<h3>Information</h3>
							<p class="price2"><%= product.name %></p>
							<p class="price2"><%= product.brand.name %></p>
							<p class="size"><%= product.size %> cm</p>
							<p class="color"><%= product.color.name %> </p>
				        	<h4>Description</h4>
				        	<p class="m_10"><%= product.description %></p>
				        
				        </div>
				        <div class="clear"> </div>
				</div>
				<div class="col-md-3">
				  <div class="box-info-product">
					
					<h5>Price
					$<%= product.price %>.-</h5>	
					       
						<span class="my-4">Quantity:</span>
						<select class="quantity">
							<% for(let i=1; i < 10; i++){ %>
								<option><%= i %></option>
							<% } %> 
						</select>
						
						
						
						<button type="btn" name="Submit" class="addCart exclusive my-5" data-id="<%= product.id %>">
							<span>Add to cart</span>
						</button>
				   </div>
			   </div>
			</div>		
		  </div>	
	     </div>
	   </div>
	   <script src="/javascripts/script.js"></script>
	   <script src="/javascripts/cart.js"></script>
</body>

  <%- include('./partials/footer.ejs') %>

</html>
