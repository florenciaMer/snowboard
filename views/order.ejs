<%- include('./partials/head.ejs') %>
<body>
 <%- include('./partials/header.ejs') %>

   
<h1><%= title %></h1>

<main class="mt-5 pt-4">
  <div class="container wow fadeIn animated">
      <h2 class="mt-5 mb-3 h2 text-center"> Order Nro <%= order.id %></h2>
      <div class="card my-5">
          <div class="card-body">
              <table class="table table-responsive-md mb-0">
                  <thead class="none">
                      <tr>
                         
                          <th class="th-lg">
                              <strong>Product</strong>
                          </th>
                          <th class="th-lg ">
                              <strong>Price</strong>
                          </th>
                          <th class="th-lg">
                              <strong>Quantity</strong>
                          </th>
                          <th class="th-lg">
                              <strong>Subtotal</strong>
                          </th>
                          <th style="width: 50px;"></th>
                      </tr>
                  </thead>

          <% for(let i=0; i< order.OrderItems.length; i++) { %>
                  <tbody>
                      <tr class="rowsColumn">
                        <td class="borderNone"><%= order.OrderItems[i].name %></td>
                        <td class="borderNone">$<%= order.OrderItems[i].price %>.-</td>
                        <td class="borderNone my-4"><%= order.OrderItems[i].quantity %></td>
                        <td class="borderNone">$<%= order.OrderItems[i].price * order.OrderItems[i].quantity %>.-</td>
                      </tr>
         <% }  %>
                  </tbody>
              </table>
              <div class="card-footer text-right">
                  <h4 class="text-start">Total: <span class="totalAmount">$<%= order.total %>.- </span></h4>
              </div>
          </div>
      </div>
      <div class="card">
          <div class="card-header text-center">
              Detail buy
          </div>
          <form class="card-body" id="checkoutCart">
              <div class="row justify-content-between">
                  <div class=" col-md-6 mb-4">
                      <p><strong>Type Shipping:</strong>   <%= order.shippingMethod %></p>
                 
                      <p><strong>Pay:</strong>   <%= order.paymentMethod %></p>
                  </div>
              </div>
          </form>
      </div>
  </div>
</main>
<script src="/javascripts/script.js"></script>
<script src="/javascripts/cart.js"></script>

</body>

  <%- include('./partials/footer.ejs') %>

</html>
